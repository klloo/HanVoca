<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestsetDetailActivity">

    <ImageView
            android:src="@drawable/setdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView4"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.194"/>
    <TextView
            android:text="테스트할 단어의 수를 입력하세요"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="bold"
            android:gravity="center" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="224dp" app:layout_constraintHorizontal_bias="0.0"
    />
    <Space
            android:layout_width="399dp"
            android:layout_height="44dp" android:layout_weight="1" tools:layout_editor_absoluteY="264dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/space" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="144dp"
            android:layout_height="174dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.397" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView4">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inputnum" android:hint="      단어 수 입력" android:hyphenationFrequency="normal"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="33dp">
        </LinearLayout>
        <Button
                android:text="Start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/startBtn"
                android:background="@drawable/buttonshape"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>