<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="hanvoca_v1_release.TestActivity">

    <ImageView
            android:layout_width="301dp"
            android:layout_height="233dp" app:srcCompat="@drawable/testcard"
            android:id="@+id/imageView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.109"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="사과"
            android:layout_width="176dp"
            android:layout_height="85dp" android:id="@+id/mean"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" android:gravity="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.249"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="253dp"
            android:layout_height="61dp"
            android:id="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/nextBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.013"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputWord"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="NEXT"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:id="@+id/nextBtn"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/buttonshape" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mean" app:layout_constraintVertical_bias="0.102"/>
</android.support.constraint.ConstraintLayout>